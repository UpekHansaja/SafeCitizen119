{
  "expo": {
    "name": "SafeCitizen",
    "slug": "SafeCitizen",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "safecitizen",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "assets/fonts/Helvetica Neue Medium Extended.otf",
            "assets/fonts/Comfortaa-VariableFont_wght.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Helvetica Neue Medium Extended",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Helvetica Neue Medium Extended.otf"
                  }
                ]
              },
              {
                "fontFamily": "Comfortaa",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Comfortaa-VariableFont_wght.ttf"
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              {
                "fontFamily": "Helvetica Neue Medium Extended",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Helvetica Neue Medium Extended.otf"
                  }
                ]
              },
              {
                "fontFamily": "Comfortaa",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Comfortaa-VariableFont_wght.ttf"
                  }
                ]
              }
            ]
          },
          "web": {
            "fonts": [
              {
                "fontFamily": "Helvetica Neue Medium Extended",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Helvetica Neue Medium Extended.otf"
                  }
                ]
              },
              {
                "fontFamily": "Comfortaa",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Comfortaa-VariableFont_wght.ttf"
                  }
                ]
              }
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}